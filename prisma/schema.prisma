

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  
}


model User {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  clerkId String @unique
  rssFeeds RssFeed[]
  newsletters Newsletter[]
  settings UserSettings?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserSettings {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @unique @db.ObjectId
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  

  newsletterName String?
  description String?
  targetAudience String?
  defaultTone String?


  brandVoice String?
  companyName String?
  industry String?

  disclaimerText String?
  defaultTags String[]
  customFooter String?
  senderName String?
  senderEmail String?


createdAt DateTime @default(now())
updatedAt DateTime @updatedAt

}

model RssFeed {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  url String
  title String?
  description String?
  link String?
  imageUrl String?
  language String?
  lastFetched DateTime?
  articles RssArticle[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, url])
  @@index([userId])
}


model RssArticle {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  feedId String @db.ObjectId
  feed RssFeed @relation(fields: [feedId], references: [id], onDelete: NoAction)
  guid String @unique
  sourceFeedIds String[] 
  title String
  link String
  content String?
  summary String?
  pubDate DateTime
  author String?
  categories String[]
  imageUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([feedId])
  @@index([pubDate])
  @@index([feedId, pubDate])
  @@index([sourceFeedIds])

}

model Newsletter {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  suggestedTitles String[]
  suggestedSubjectLines String[]
  body String
  topAnnouncements String[]
  additionalInfo String?
  startDate DateTime
  endDate DateTime
  userInput String?
  feedsUsed String[] 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([userId, createdAt])
  @@index([createdAt])
}
